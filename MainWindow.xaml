<Window x:Class="SortingVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortingVisualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Width="30" Height="30" Grid.Row="1" Margin="760,354,10,10" x:Name="Randomize" Click="Randomize_OnClick">Rnd</Button>
        <Button Width="30" Height="30" Grid.Row="1" Margin="725,354,45,10" x:Name="Sort" Click="Sort_OnClick">Srt</Button>
        <Canvas x:Name="canvas" Margin="54,60,54,44" Height="auto" Grid.Row="1">
        <ListView x:Name="intlist" Canvas.Right="-50" Height="330" Width="50"></ListView>
    </Canvas>
    </Grid>
</Window>
